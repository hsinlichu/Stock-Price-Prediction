{
    "name": "StockNet",
    "n_gpu": 1,

    "arch": {
        "type": "StockModel",
        "args": {}
    },
    "data_loader": {
        "type": "StockDataLoader",
        "args":{
            "data_path": "data/TW50.csv",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2,
            "howManyDays": 5
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "MSELoss",
    "metrics": [
        "difference"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
